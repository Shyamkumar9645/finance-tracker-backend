# finance-tracker-backend/.env.production
NODE_ENV=production
PORT=5001

# Production Database
DB_USER=postgres
DB_PASSWORD=your_production_password
DB_NAME=railway
DB_HOST=ballast.proxy.rlwy.net
DB_PORT=14809
DB_SYNC=false

# Secure JWT Secret
JWT_SECRET=super_secure_production_jwt_secret_minimum_32_characters

# Production Frontend URL
CLIENT_URL=https://personal-finance-tracker-ia63.onrender.com

# Production Email
EMAIL_SERVICE=sendgrid
EMAIL_API_KEY=your_sendgrid_api_key
EMAIL_FROM=Finance Tracker <noreply@financetracker.com>

# Rate Limiting
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX=100

# Logging
LOG_LEVEL=error